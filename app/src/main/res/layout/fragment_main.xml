<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/get_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get colors"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/get_current_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
    </Button>

    <Button
        android:id="@+id/get_current_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get current color"
        app:layout_constraintTop_toBottomOf="@+id/get_colors"
        app:layout_constraintBottom_toTopOf="@+id/get_color_names"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
    </Button>

    <Button
        android:id="@+id/get_color_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get color names"
        app:layout_constraintTop_toBottomOf="@+id/get_current_color"
        app:layout_constraintBottom_toTopOf="@+id/get_brightness_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
    </Button>

    <Button
        android:id="@+id/get_brightness_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get brightness level"
        app:layout_constraintTop_toBottomOf="@+id/get_color_names"
        app:layout_constraintBottom_toTopOf="@+id/get_current_brightness"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
    </Button>

    <Button
        android:id="@+id/get_current_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get current brightness"
        app:layout_constraintTop_toBottomOf="@+id/get_brightness_level"
        app:layout_constraintBottom_toTopOf="@+id/set_brightness_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
    </Button>

    <Button
        android:id="@+id/set_brightness_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set Brightness Level"
        app:layout_constraintTop_toBottomOf="@+id/get_current_brightness"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/set_brightness_level_input"
        android:layout_marginTop="24dp">
    </Button>

    <TextView
        android:id="@+id/set_brightness_level_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type brightness"
        app:layout_constraintStart_toEndOf="@+id/set_brightness_level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/set_brightness_level"
        app:layout_constraintBottom_toBottomOf="@+id/set_brightness_level"/>

    <Button
        android:id="@+id/turn_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on"
        app:layout_constraintTop_toBottomOf="@+id/set_brightness_level_input"
        app:layout_constraintBottom_toTopOf="@+id/turn_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
    </Button>

    <Button
        android:id="@+id/turn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn off"
        app:layout_constraintTop_toBottomOf="@+id/turn_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
    </Button>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Готово"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/turn_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

